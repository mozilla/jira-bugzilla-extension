{
    "manifest_version": 2,
    "name": "jira-bugzilla",
    "version": "0.0.1",
    "applications": {
        "gecko": {
            "id": "jira-bz@mozilla.com",
            "strict_min_version": "77.0"
        }
    },
    "background": {
        "scripts": ["background.js"]
    },
    "page_action": {
        "default_title": "jira-bugzilla",
        "default_icon": {
            "48": "icons/jira-48.png"
        },
        "default_popup": "popup.html"
    },
    "permissions": [
        "cookies",
        "scripting",
        "https://bugzilla.mozilla.org/*",
        "https://mozilla-hub.atlassian.net/rest/api/*"
    ],
    "web_accessible_resources": [
        "icons/*"
    ]
}
