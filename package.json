{
  "name": "jira-bz",
  "packageManager": "yarn@3.5.0",
  "devDependencies": {
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.0",
    "pinst": "^3.0.0",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3",
    "web-ext": "^7.6.0"
  },
  "scripts": {
    "lint": "eslint 'src/**/*.{js,jsx}'",
    "start:firefox": "web-ext run -t firefox-desktop --source-dir ./src/ --pref extensions.manifestV3.enabled=true",
    "prettier": "prettier --write '**'",
    "prettier-ci": "prettier -c '**'",
    "test-ci": "yarn run prettier-ci && yarn run lint",
    "pre-commit-checks": "pretty-quick --staged",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable"
  }
}
