{
  "name": "jira-bz",
  "packageManager": "yarn@3.5.0",
  "devDependencies": {
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^5.16.5",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "lit-html": "^2.7.4",
    "pinst": "^3.0.0",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3",
    "web-ext": "^7.6.0"
  },
  "scripts": {
    "lint": "eslint 'src/**/*.{js,mjs}'",
    "start:firefox": "web-ext run --source-dir ./src/ --pref extensions.manifestV3.enabled=true --firefox='beta'",
    "prettier": "prettier --write '**'",
    "prettier-ci": "prettier -c '**'",
    "test-ci": "yarn run test && yarn run prettier-ci && yarn run lint",
    "test": "yarn node --experimental-vm-modules $(yarn bin jest)",
    "test:watch": "yarn run test --watch --verbose",
    "pre-commit-checks": "pretty-quick --staged",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "web-ext:lint": "web-ext lint --source-dir ./src"
  },
  "type": "module"
}
